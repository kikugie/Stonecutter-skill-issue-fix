{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/stonecutter-versioning/stonecutter/tools/settings-schema.json",
  "title": "Stonecutter Versions",
  "description": "Defines version set used by Stonecutter",
  "type": "object",
  "definitions": {
    "identifier": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_\\-+.]+$"
    },
    "branch": {
      "type": "string",
      "pattern": "^$|^[a-zA-Z0-9_\\-+.]*$"
    },
    "project": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_\\-+.]+(:[a-zA-Z0-9_\\-+.]+)?$"
    },
    "branch-collection": {
      "oneOf": [
        {
          "$ref": "#/definitions/branch-array"
        },
        {
          "type": "object",
          "properties": {
            "branches": {
              "$ref": "#/definitions/branch-array"
            }
          },
          "required": [
            "branches"
          ]
        }
      ]
    },
    "branch-array": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/branch"
      }
    },
    "project-collection": {
      "oneOf": [
        {
          "$ref": "#/definitions/project-array"
        },
        {
          "type": "object",
          "properties": {
            "versions": {
              "$ref": "#/definitions/project-array"
            }
          },
          "required": [
            "versions"
          ]
        }
      ]
    },
    "project-array": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/project-def"
      }
    },
    "project-def": {
      "oneOf": [
        {
          "$ref": "#/definitions/project"
        },
        {
          "type": "object",
          "properties": {
            "project": {
              "$ref": "#/definitions/identifier"
            },
            "version": {
              "$ref": "#/definitions/identifier"
            }
          },
          "required": [
            "project"
          ]
        }
      ]
    }
  },
  "properties": {
    "vcs": {
      "$ref": "#/definitions/identifier",
      "description": "Name of the project used as Version Control reset point."
    },
    "branches": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/project-collection"
      },
      "minProperties": 1,
      "propertyNames": {
        "$ref": "#/definitions/branch"
      }
    },
    "versions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/branch-collection"
      },
      "minProperties": 1,
      "propertyNames": {
        "$ref": "#/definitions/project"
      }
    }
  },
  "oneOf": [
    {
      "required": [
        "branches"
      ]
    },
    {
      "required": [
        "versions"
      ]
    }
  ]
}